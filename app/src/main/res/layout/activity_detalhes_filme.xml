<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetalhesFilmeActivity">

    <ImageView
        android:id="@+id/filme_detalhes_imagem"
        android:layout_width="153dp"
        android:layout_height="505dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_filme_detalhes_titulo"
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filme Titutlo"
            tools:text="TÃ­tulo" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_filme_detalhes_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descricao" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_filme_detalhes_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data" />

        <Button
            android:id="@+id/btn_detalhes_inserir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inserir a Lista de Filmes Assistido" />


    </LinearLayout>

</LinearLayout>